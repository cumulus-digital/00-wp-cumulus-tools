{
  "_#": "Wordpress features support",
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "cumulus-gutenberg/collapsable-group",
  "title": "Mobile Collapsable Group",
  "description": "A group block which can 'collapse' on mobile as well as 'stick' to a bounding container on scroll.",
  "keywords": [
    "cumulus",
    "cmls",
    "group",
    "stick",
    "sticky",
    "mobile"
  ],
  "icon": "star-filled",
  "category": "cmls",
  "editorScript": "file:./assets/editor.js",
  "viewScript": "file:./assets/frontend.js",
  "style": "file:./assets/frontend.css",
  "editorStyle": "file:./assets/editor.css",
  "attributes": {
    "tagName": {
      "type": "string",
      "enum": [
        "div",
        "section",
        "aside"
      ],
      "default": "div"
    },
    "collapseOnMobile": {
      "type": "boolean",
      "default": true
    },
    "alwaysShowHeader": {
      "type": "boolean",
      "default": false
    },
    "mobileExpandIcon": {
      "type": "string",
      "default": "plus"
    },
    "mobileExpandIconColor": {
      "type": "string"
    },
    "separatorColor": {
      "type": "string",
      "default": "lightgrey"
    },
    "bodyId": {
      "type": "string",
      "default": ""
    },
    "hasStickyPosition": {
      "type": "boolean",
      "default": false
    },
    "hasOnlyStickOnMobile": {
      "type": "boolean",
      "default": false
    },
    "stickyPosition": {
      "type": "string",
      "default": "calc( var(--cmls_base-masthead-height) + var(--wp_admin_bar_height) + 1em )"
    },
    "stickyZIndex": {
      "type": "integer",
      "default": 20
    },
    "stickyDesktopContainer": {
      "type": "string",
      "default": ".body"
    },
    "stickyMobileContainer": {
      "type": "string",
      "default": ".body"
    },
    "style": {
      "type": "object",
      "default": {
        "spacing": {
          "padding": {
            "top": ".75em",
            "right": ".75em",
            "bottom": ".75em",
            "left": ".75em"
          }
        },
        "border": {
          "width": "7px",
          "style": "solid"
        }
      }
    },
    "borderColor": {
      "type": "string",
      "default": "lightgrey"
    }
  },
  "supports": {
    "_#": "Allow customizing border",
    "align": true,
    "alignWide": false,
    "className": true,
    "color": {
      "background": true,
      "gradients": true,
      "link": true,
      "text": true
    },
    "customClassName": true,
    "defaultStylePicker": true,
    "filter": {
      "duotone": false
    },
    "html": false,
    "inserter": true,
    "multiple": true,
    "reusable": true,
    "lock": true,
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "typography": {
      "align": true,
      "textAlign": true,
      "fontSize": true,
      "lineHeight": true,
      "fontWeight": true,
      "fontStyle": true,
      "textTransform": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextTransform": true
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "defaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    }
  }
}